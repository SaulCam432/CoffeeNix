<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Cliente.products.details.ClientProductDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del producto"
            android:textSize="18sp"
            android:textColor="@color/textColor"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:maxLines="2"
            android:fontFamily="@font/roboto_bold_condensed"/>

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/imageProductSlider"
            android:layout_width="wrap_content"
            android:layout_height="220dp"
            app:iss_auto_cycle="true"
            android:layout_marginTop="10dp"
            app:iss_period="1000"
            app:iss_delay="1000"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DESCRIPCION"
            android:textSize="16sp"
            android:textColor="@color/textColor"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/roboto_bold_condensed"/>

        <TextView
            android:id="@+id/textProductDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type "
            android:textSize="16sp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:maxLength="255"
            android:layout_marginTop="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center|left"
        android:layout_gravity="bottom"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="90dp">

        <ImageView
            android:id="@+id/imageview_add"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_btn_minus"/>

        <TextView
            android:id="@+id/textProductCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:fontFamily="@font/saira_condensed_regular"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />

        <ImageView
            android:id="@+id/imageview_remove"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_btn_plus"/>

        <TextView
            android:id="@+id/textProductPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:fontFamily="@font/saira_condensed_regular"
            android:text="$ 0"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/adminBtnEditProfile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/button_1"
        android:text="@string/clientProductDetailBtn"
        android:textAllCaps="false"
        android:textColor="@color/textColorLight"
        android:textSize="16sp"
        android:fontFamily="@font/roboto_bold_condensed"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="bottom"/>



</androidx.coordinatorlayout.widget.CoordinatorLayout>